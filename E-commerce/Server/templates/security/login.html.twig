{% extends 'base.html.twig' %}
{% block body %}
<h1>Connexion</h1>

<form action="{{ path('security_login') }}" method="POST">


    <div class=" form-group">
        <input class="form-control" name="_username" placeholder="Entrer votre email !" required type="text">
    </div>

    <div class=" form-group">
        <input class="form-control" name="_password" placeholder="Entrer votre mot de passe !" required type="password">
    </div>

    <div class=" form-group">
        <button class="btn btn-success" type="submit">Connexion</button>
    </div>

</form>


{% endblock %}